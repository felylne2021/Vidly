@model Vidly.Models.Movie
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Model.Name</title>
</head>
<body>
    <div>
        <h2>@Model.Name</h2>

        <ul>
            <li>Genre: @Model.Genre.GenreName</li>
            <li>Release Date: @Model.ReleaseDate.ToLongDateString()</li>
            <li>Date Added: @Model.DateAdded.ToLongDateString()</li>
            <li>Number in Stock: @Model.Stock</li>
        </ul>

    </div>
    @using (Html.BeginForm("Edit", "Movies", new { id = Model.Id })) {
        <button type="submit" class="btn btn-primary">Edit Movie</button>
    }
</body>
</html>

